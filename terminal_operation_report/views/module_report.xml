                    <div class="page">

                        <style type="text/css">

                            .header,
                            .footer {
                                display: none;
                            }
                            .clearfloat {
                                clear: both;
                                float: none;
                                width: 100%;
                                height: 1px;
                                display: block;
                            }
                            .report-wrapper {
                                width: 1000px;
                                margin: 0px auto;
                            }
                            table {
                                width: 100%;
                                border-spacing: 0px;
                                border: 2px solid #CCC;
                            }
                            table tr td, table tr th {
                                text-align: center;
                                padding: 10px 0px 10px 5px;
                                min-width: 130px;
                                border-right: 2px solid #CCC;
                                border-bottom: 1px solid #eee;
                            }
                            table tr td:last-child, 
                            table tr th:last-child {
                                border-right: none
                            }
                            table tr:last-child td {
                                border-bottom: none
                            }
                            table tr th {
                                text-align: center;
                            }
                            .report-header {
                                width: 100%;
                                margin: 40px -58px -13px;
                                text-align: left;
                            }
                            .report-header p {
                                width: 50%;
                                float: left;
                                margin: 0px 95px 0px;
                            }
                            .report-header p .solid {
                                font-weight: bold;

                            }
                            h2 {
                                text-align: center;
                                font-size: 35px;
                                text-decoration: underline; 
                            }
                            .tile {
                                display: inline-block;
                                width: 100px;
                                text-align: center;
                                background: #a64f8e;
                                color: #fff;
                                padding: 2px 5px;
                            }
                            .name {
                                font-weight: bold;
                                text-align: center;
                                font-size: 20px;
                                margin-left: -42px;
                            }
                            img {
                                width: 30%;
                                height: 80px;
                            }
                            h1 {
                                text-align: center;
                                width: 100%;
                                display: inline-block;
                            }
                            .main_box {
                                width: 100%;
                                float: left;
                            }
                            .date {
                                width: 20%;
                                text-align: right;
                                margin-top: 0px;
                                float: left;
                                margin-top: 23px;
                            }
                            .center_head {
                                width: 50%;
                                margin: 0px auto;
                                margin-bottom : 25px;
                    
                            }
                            .ledger {
                                width: 20%;
                                margin: 0px auto;
                                float: left;
                                margin-top: 35px;
